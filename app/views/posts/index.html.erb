<h1>All Posts</h1>

<%= link_to "New Post", new_post_path, data: { turbo_frame: "modal" }, class: "btn btn-primary" %>
    <ul id="posts_list">
        <% @posts.each do |post| %>
            <%= render "post", post: post %>
        <% end %>
    </ul>


<!-- Modal frame -->
<%= turbo_frame_tag "modal" %>
